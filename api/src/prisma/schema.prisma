generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int       @id @default(autoincrement())
  username String?
  messages Message[]
}

model Message {
  messageId Int     @id @default(autoincrement())
  content   String?
  author    User?   @relation(fields: [authorId], references: [userId])
  authorId  Int?
}
